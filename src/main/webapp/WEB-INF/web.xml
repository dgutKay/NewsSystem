<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>NewsSystem</display-name>

	<context-param>
		<param-name>drv</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/NewsSystem</param-value>
	</context-param>
	<context-param>
		<param-name>usr</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>pwd</param-name>
		<param-value>659zxcvbnm</param-value>
	</context-param>
	<context-param>
		<param-name>domain</param-name>
		<param-value>http://localhost:8080/NewsSystem</param-value>
	</context-param>
	<context-param>
		<param-name>emailHost</param-name>
		<param-value>smtp.163.com</param-value>
	</context-param>
	<context-param>
		<param-name>emailUserEmail</param-name>
		<param-value>yemeiqistudy@163.com</param-value>
	</context-param>
	<context-param>
		<param-name>emailUserName</param-name>
		<param-value>yemeiqistudy</param-value>
	</context-param>
	<context-param>
		<param-name>emailPassword</param-name>
		<param-value>study123</param-value>
	</context-param>

	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>servlet.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>NewsServlet</servlet-name>
		<servlet-class>servlet.NewsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-class>servlet.CommentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ImageCheckCodeServlet</servlet-name>
		<servlet-class>servlet.ImageCheckCodeServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StatisticServlet</servlet-name>
    <servlet-class>servlet.StatisticServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AutoGeneratorServlet</servlet-name>
    <servlet-class>servlet.AutoGeneratorServlet</servlet-class>
  </servlet>





	<servlet-mapping>
		<servlet-name>InitServlet</servlet-name>
		<url-pattern>/servlet/InitServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewsServlet</servlet-name>
		<url-pattern>/servlet/NewsServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CommentServlet</servlet-name>
		<url-pattern>/servlet/CommentServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ImageCheckCodeServlet</servlet-name>
		<url-pattern>/servlet/ImageCheckCodeServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StatisticServlet</servlet-name>
    <url-pattern>/servlet/StatisticServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AutoGeneratorServlet</servlet-name>
    <url-pattern>/servlet/AutoGeneratorServlet</url-pattern>
  </servlet-mapping>

	<filter>
		<filter-name>charencode</filter-name>
		<filter-class>filter.CharEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>charencode</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>HeadFilter</filter-name>
		<filter-class>filter.HeadFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HeadFilter</filter-name>
		<!-- <url-pattern>/news/manage/*</url-pattern> -->
		<url-pattern>/news/*</url-pattern>
		<url-pattern>/comment/*</url-pattern>
		<url-pattern>/user/manageUIMain/*</url-pattern>
		<url-pattern>/user/free/*</url-pattern>
		<url-pattern>/index.jsp</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<filter>
		<filter-name>AuthorityFilter</filter-name>
		<filter-class>filter.AuthorityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthorityFilter</filter-name>
		<url-pattern>/news/manage/*</url-pattern>
		<url-pattern>/manager/*</url-pattern>
		<url-pattern>/statistic/*</url-pattern>
		<url-pattern>/user/manage/*</url-pattern>
		<servlet-name>UserServlet</servlet-name>
		<servlet-name>NewsServlet</servlet-name>
		<servlet-name>CommentServlet</servlet-name>
		<servlet-name>StatisticServlet</servlet-name>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<session-config>
		<session-timeout>100</session-timeout>
	</session-config>

	<jsp-config>
		<taglib>
			<taglib-uri>/myTagLib</taglib-uri>
			<taglib-location>/WEB-INF/myTagLib.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>